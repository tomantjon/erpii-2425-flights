<mvc:View controllerName="sap.capire.app.flightapp.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page title="{i18n>detailPageTitle}"
        id="pgDetail"
        showHeader="true">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://nav-back"
                        press="onNavBack"></Button>
                </contentLeft>
                <contentRight>
                    <Button id="edit"
                        text="Edit"
                        enabled="false"
                        press="handleEditPress" />
                    <Button id="btnSaveFlightDetails"
                        text="Save"
                        type="Emphasized"
                        visible="false"
                        press="handleSavePress" />
                    <Button id="cancel"
                        text="Cancel"
                        visible="false"
                        press="handleCancelPress" />
                </contentRight>
            </Bar>
        </customHeader>
    </Page>
</mvc:View>