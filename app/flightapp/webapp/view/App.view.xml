<mvc:View controllerName="sap.capire.app.flightapp.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page"
                    title="{i18n>title}">
                    <VBox >
                        <f:SimpleForm id="SimpleFormChange354"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            title="Address"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false">
                            <f:content>
                                <Label text="Airline" />
                                <Input id="name"
                                    value="{form>/AirlineID}" />
                                <Label text="Connection" />
                                <Input value="{form>/ConnectionID}">
                                </Input>
                                <Label text="Flight Date" />
                                <DatePicker id="DP4"
                                    value="{'path': 'form>/FlightDate','type': 'sap.ui.model.odata.type.Date',
						'formatOptions': {
							'pattern': 'yyyy-MM-dd'
						}}"
                                    class="sapUiSmallMarginBottom"/>
                            </f:content>
                            <Button id="save"
                                text="Save"
                                type="Emphasized"
                                press="handleSavePress" />
                        </f:SimpleForm>

                    </VBox>
                    <Table id="tblFlights"
                        inset="false"
                        items="{
			path: '/Flight',
			sorter: {
				path: 'FlightDate'
			}
		}">

                        <columns>
                            <Column width="12em">
                                <Text text="Flight Date" />
                            </Column>
                            <Column width="12em">
                                <Text text="Airline" />
                            </Column>
                            <Column width="12em">
                                <Text text="Connection" />
                            </Column>
                            <Column width="12em">
                                <Text text="Price" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <Text text="{FlightDate}" />
                                    <Text text="{to_Airline/Name}" />
                                    <Text text="{ConnectionID}" />

                                    <ObjectNumber number="{
							parts:[{path:'Price'},{path:'CurrencyCode_code'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {showMeasure: false}
						}"
                                        unit="{CurrencyCode_code}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>